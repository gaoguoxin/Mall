<script type="text/javascript">
obj_h4 = document.getElementById("cate").getElementsByTagName("h4");
obj_ul = document.getElementById("cate").getElementsByTagName("ul");
obj_img = document.getElementById("cate").getElementsByTagName("img");
function tab(id)
{ 
		var css=function(obj,attr){
			var at = obj.currentStyle ? obj.currentStyle[attr] : getComputedStyle(obj,null)[attr];
			//alert(at);
			return at;
		}
		if(css(obj_ul.item(id),"display")== "none")
		{
			obj_ul[id].style.display = "block";
			obj_img.item(id).src = "images/btn_fold.gif";
			return false;
		}
		else(css(obj_ul.item(id),"display") == "block")
		{
			
			obj_ul[id].style.display = "none"
			obj_img.item(id).src = "images/btn_unfold.gif"
		}
}
</script>
